<div class="pull-right">
  <% if current_user %>
    <%= link_to("增加群组", new_group_path(@group), class: :"btn btn-primary btn-sm") %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>标题</th>
      <th>创建时间</th>
      <th>创建者</th>
      <th>管理选项</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.created_at %></td>
        <td><%= group.user.email %></td>
        <td>
          <% if current_user && current_user == group.user %>
            <%= link_to("编缉群组", edit_group_path(group), class: :"btn btn-success btn-xs") %>
            <%= link_to("删除群组", group_path(group), method: :delete, class: :"btn btn-danger btn-xs") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
